<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.quilljs.com/1.3.6/quill.core.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    {% block styles %}
    {% endblock %}
</head>

<body>

<header>
    <div class="navbar-fixed">
        <nav class="grey darken-4">
            <div class="nav-wrapper container">
                <ul>
                    <li><a href="/" class="brand-logo">MyBlogLogo</a></li>
                    <ul class="hide-on-med-and-down">
                        <li><a href="/">Home</a></li>
                        <li>
                            <a class="dropdown-trigger" href="" data-target="categoriesDropdown">
                                Categories<i class="material-icons right">arrow_drop_down</i>
                            </a>
                        </li>
                        <li><a href="">Contact</a></li>
                    </ul>
                </ul>
                <ul class="right hide-on-med-and-down">
                    {% include('Inc/user-nav.html.twig') %}
                </ul>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger right"><i
                            class="material-icons">menu</i></a>
            </div>
        </nav>
        <ul id="categoriesDropdown" class="dropdown-content">
            {% for cat in categories %}
                <li class="text-bold"><a href="/categories/{{ cat.getUrlSlug }}">{{ cat.name }}</a></li>
                {% for subcategory in cat.getAllDescendantSubcategories %}
                    <li>
                        <a href="/categories/{{ subcategory.getUrlSlug }}">
                            {%- for i in range(0, subcategory.getLevel) -%}
                                &emsp;
                            {%- endfor -%}
                            {{ subcategory.getName }}
                        </a>
                    </li>
                {% endfor %}
                <li class="divider"></li>
            {% endfor %}
        </ul>
    </div>
    <nav class="sidenav mobile-nav" id="mobile-demo">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="">Contact</a></li>
            <li><a class="modal-trigger" href="#categoriesModal">Categories</a></li>
            <li class="divider"></li>
            {% include('Inc/user-nav.html.twig') %}
        </ul>
    </nav>
    <div id="categoriesModal" class="modal">
        <button class="modal-close btn-flat">
            <i class="material-icons">close</i>
        </button>
        <div class="modal-content">
            <h4 class="center-align">Categories</h4>
            <div class="collection">
                {% for cat in categories %}
                    <a class="collection-item text-bold" href="/categories/{{ cat.getUrlSlug }}">{{ cat.name }}</a>
                    {% for subcategory in cat.getAllDescendantSubcategories %}
                        <a class="collection-item" href="/categories/{{ subcategory.getUrlSlug }}">
                            {%- for i in range(0, subcategory.getLevel) -%}
                                &emsp;
                            {%- endfor -%}
                            {{ subcategory.getName }}
                        </a>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</header>

<main>
    {% for message in flash_messages %}
        <div class="card alert alert-{{ message.type }}" data-aos="fade-down" data-aos-easing="ease-in-out">
            <div class="card-content">
                <p>{{ message.body }}</p>
            </div>
            <button class="alert-close-btn" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {% endfor %}
    {% block post_image %}
    {% endblock %}
    <div class="container">


        {% block body %}
        {% endblock %}
    </div>
</main>

<footer class="page-footer grey darken-3">
    <div class="container">
        <div class="row">
            <div class="col l6 offset-l3 s12 center-align">
                <a href="/" class="brand-logo">MyBlogLogo</a>
            </div>
        </div>
    </div>
    <div class="footer-copyright grey darken-4">
        <div class="container">
            © 2019 Copyright
            <a class="grey-text text-lighten-4 right" href="#!">Social icons</a>
        </div>
    </div>
</footer>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="/assets/js/main.js"></script>
{% block scripts %}
{% endblock %}

</body>
</html>