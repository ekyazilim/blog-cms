{% extends "base.html.twig" %}

{% block title %}{{ post.getTitle }}{% endblock %}

{% block body %}

    <h2>All posts</h2>

    {% for post in posts %}

        {% if loop.index0 is divisible by(2) %}
            <div class="row">
        {% endif %}

        <div class="col l6">
            <article>
                <div class="card card-post center-align z-depth-2 hoverable">
                    <div class="card-image">
                        <img src="https://placehold.co/1920x1080">
                    </div>
                    <div class="card-content ">
                        <div class="card-title">
                            <h5>{{ post.getTitle }}</h5>
                        </div>
                        <div class="row">
                            <p>{{ post.getIntroduction|striptags|slice(0,255) }}</p>
                        </div>
                        <a href="/posts/{{ post.getUrlSlug }}" class="waves-effect waves-light btn">
                            Read more
                        </a>
                    </div>
                    <div class="card-action">
                        <span class="post-details">
                            <i class="material-icons ">edit</i>
                            {{ post.getAuthorName }}
                        </span>
                        <span class="post-details">
                            <i class="material-icons">date_range</i>
                            {{ post.getCreateTime|date('d/m/Y') }}
                        </span>
                    </div>
                </div>
            </article>
        </div>

        {% if loop.index0 is not divisible by(2) or loop.last %}
            </div>
        {% endif %}

    {% endfor %}

    <div class="row center">
        {% include 'inc/pagination.html.twig' with {
            currentPage: page,
            paginationPath: "/posts/",
            lastPage: total_pages,
            showAlwaysFirstAndLast: true
        } only %}
    </div>

{% endblock %}