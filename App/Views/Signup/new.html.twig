{% extends "base.html.twig" %}

{% block title %}New account{% endblock %}

{% block scripts %}
    <script src="/assets/js/customValidationMethods.js"></script>
    <script src="/assets/js/signupFormValidation.js"></script>
    <script src="/assets/js/showHidePassword.js"></script>
{% endblock %}

{% block body %}
    <h2 class="center-align">Sign up</h2>

    {% if user.getValidationErrors is not empty %}
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <ul class="collection with-header">
                    <li class="collection-header red lighten-3 center-align"><h5>Errors:</h5></li>
                    {% for error in user.getValidationErrors %}
                        <li class="collection-item">{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card-panel grey lighten-4 z-depth-3">
                <form id="formSignup" action="/signup/create" method="post">
                    <div class="input-field">
                        <i class="material-icons prefix">account_circle</i>
                        <input type="text" id="inputUsername" name="username" class="validate"
                               value="{{ user.getUsername }}"
                               required/>
                        <label for="inputUsername">Username</label>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">mail_outline</i>
                        <input type="email" id="inputEmail" name="email" value="{{ user.getEmail }}" required/>
                        <label for="inputEmail">Email address</label>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">lock_outline</i>
                        <i class="material-icons password-icon" id="passwordIcon">visibility</i>
                        <input type="password" id="inputPassword" name="password" required/>
                        <label for="inputPassword">Password</label>
                    </div>
                    <div class="row center-align">
                        <button class="waves-effect waves-light btn-large orange darken-3" type="submit">
                            Sign up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
