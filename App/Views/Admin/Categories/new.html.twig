{% extends "Admin/base-admin.html.twig" %}

{% block title %} Admin Panel {% endblock %}

{% block page_title %} <h1>Add new category</h1> {% endblock %}

{% block body %}

    {% if category.getValidationErrors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in category.getValidationErrors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action="/admin/categories/create" method="post">
        <div>
            <label for="inputName">Name</label>
            <input type="text" id="inputName" name="name" value="{{ category.getName }}">
        </div>
        <div>
            <label for="textareaDescription">Description</label>
            <textarea name="description" id="textareaDescription" rows="10" cols="30">{{ category.getDescription }}</textarea>
        </div>
        <button type="submit">Add category</button>
    </form>
{% endblock %}