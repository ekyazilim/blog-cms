{% extends "Admin/base-admin.html.twig" %}

{% block title %} Admin Panel {% endblock %}

{% block page_title %} <h3 class="page-title">Edit comment</h3> {% endblock %}

{% block body %}

    {% if user.getValidationErrors is not empty %}
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <ul class="collection with-header">
                    <li class="collection-header red lighten-3 center-align"><h5>Errors:</h5></li>
                    {% for error in user.getValidationErrors %}
                        <li class="collection-item">{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col m10 s12 offset-m1">
            <div class="card z-depth-2">
                <form action="/admin/comments/{{ comment.getId }}/update" method="post">
                    <div class="card-content">
                        <div class="input-field">
                            <label for="textareaComment">Comment</label>
                            <textarea class='materialize-textarea' name="content" id="textareaComment" cols="30" rows="10" minlength="1"
                                      maxlength="2000" required>{{ comment.getContent }}</textarea>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="waves-effect btn">Save</button>
                            <a href="/admin/comments" class="waves-effect btn red right">Cancel</a>
                        </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}