{% extends "Admin/base-admin.html.twig" %}

{% block title %} Admin Panel {% endblock %}

{% block page_title %} <h3 class="page-title">Add new post</h3> {% endblock %}

{% block body %}

    {% if post.getValidationErrors is not empty %}
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <ul class="collection with-header">
                    <li class="collection-header red lighten-3 center-align"><h5>Errors:</h5></li>
                    {% for error in post.getValidationErrors %}
                        <li class="collection-item">{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col m10 s12 offset-m1">
            <div class="card z-depth-2">
                <form action="/admin/posts/create" method="post">
                    <div class="card-content">
                        <div class="input-field">
                            <label for="inputTitle">Title</label>
                            <input type="text" id="inputTitle" name="title" value="{{ post.getTitle }}">
                        </div>
                        <div class="input-field">
                            <label for="textareaContent">Content</label>
                            <textarea class="materialize-textarea" name="content" id="textareaContent" rows="10"
                                      cols="30">{{ post.getContent }}</textarea>
                        </div>
                        <div class="input-field">
                            <select id="selectCategory" name="category_id">
                                <option value="0">Uncategorized</option>
                                {% for category in categories %}
                                    <option value="{{ category.getId }}">{{ category.getName }}</option>
                                {% endfor %}
                            </select>
                            <label for="selectCategory">Category</label>
                        </div>
                        <p>
                            <label for="radioDraft">
                                <input type="radio" name="is_published" id="radioDraft" value="0" checked>
                                <span>Save as draft</span>
                            </label>
                        </p>
                        <p>
                            <label for="radioPublish">
                                <input type="radio" name="is_published" id="radioPublish" value="1">
                                <span>Publish</span>
                            </label>
                        </p>
                    </div>
                    <div class="card-action">
                        <button type="submit" class="waves-effect btn">Add post</button>
                        <a href="/admin/posts" class="waves-effect btn red right">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}